{
  "name": "dcl-project",
  "version": "1.0.0",
  "description": "My new Decentraland project",
  "scripts": {
    "start": "dcl start",
    "lint:fix": "npx prettier 'src/**/*.ts'",
    "build": "build-ecs",
    "watch": "build-ecs --watch",
    "deploy:now": "dcl export && now export",
    "ecs:install": "npm install --save-dev decentraland-ecs@latest",
    "ecs:install-next": "npm install --save-dev decentraland-ecs@next"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "printWidth": 120
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "decentraland-ecs": "latest",
    "jest": "^24.9.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  }
}
